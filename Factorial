#include <iostream>

using namespace std;

int factorial(int n) {
    if (n < 0) {
        return -1;
    }
    if (n == 0) {
        return 1;
    }
    return n * factorial(n - 1);
}

int main() {
    int number;
    cout << "Enter a positive integer: ";
    cin >> number;

    int result = factorial(number);

    if (result == -1) {
        cout << "Error: Factorial of a negative number is undefined." << endl;
    } else {
        cout << "Factorial of " << number << " is " << result << endl;
    }

    return 0;
}
